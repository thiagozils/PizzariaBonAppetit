@model PizzariaBonAppetit.ViewModels.CustomerIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

@if (@Model.Customers.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Clientes</th></tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Customers)
            {
                <tr><td>@Html.ActionLink(@cliente.Name, "Details", new { cliente.Id })</td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any clients yet.</p>
}