@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filmes</h2>

@if(!Model.Any())
{
    <p>Não temos nenhum filme ainda.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Filme</th></tr>
        </thead>
        <tbody>
            @foreach(var movie in Model)
            {
                <tr><td>@Html.ActionLink(@movie.Name, "Details", new { movie.Id })</td></tr>
            }
        </tbody>
    </table>
}

